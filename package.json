{
  "name": "summarai",
  "version": "2.3.0",
  "description": "summarai - Secure audio file processor with automatic transcription and summarization",
  "main": "summarai.mjs",
  "type": "module",
  "scripts": {
    "start": "bun summarai.mjs",
    "build": "bun run build-executable.mjs",
    "build:minified": "bun run build-executable.mjs --minify",
    "build:zip": "bun run build-executable.mjs --minify --zip",
    "build:patch": "bun run build-executable.mjs --increment --patch --minify",
    "build:minor": "bun run build-executable.mjs --increment --minor --minify",
    "build:major": "bun run build-executable.mjs --increment --major --minify",
    "release": "bun run build-executable.mjs --increment --patch --minify --zip",
    "test": "bun test",
    "test:security": "bun test tests/critical-fixes.test.mjs",
    "prebuild": "bun test",
    "version": "echo $npm_package_version"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0",
    "@elevenlabs/elevenlabs-js": "^2.15.0",
    "youtube-transcript-plus": "^1.0.8"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "audio",
    "transcription",
    "voice-memo",
    "automation",
    "claude",
    "whisper",
    "security",
    "validation",
    "testing",
    "bun"
  ],
  "author": "",
  "license": "MIT"
}
